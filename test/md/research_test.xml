            </conditions>
            <actions>
                <debug_text text="'ResearchDisplayFix: Init ware for test'" chance="100"
                    filter="general" />

                <add_encyclopedia_entry type="researchables" item="'research_test_ware_for_display_fix'"/>
            </actions>
        </cue>
    </cues>
</mdscript>